<!DOCTYPE html>
<html lang="fr">

<body>
	<img width="140px;" src="c:/wamp64/www/skyblue5421/public/img/logo10.png" alt="logo10">
    <link rel="stylesheet" href="c:/wamp64/www/skyblue5421/public/css/pdf.css" type="text/css" />
	<div class="row">
		<h5>Compte de : {{app.user.firstname}} {{app.user.lastname}}</h5>	  
		<h5>N° Pilote : {{app.user.id}} </h5>					
		<h5>N°Comptable : {{app.user.comptepilote.id}}
	
<header>
    <p>
        Liste de mes Vols au : {{'now'|format_datetime(locale='fr') }}
    </p>
</header>    
				<table class="table_vol" cellspacing="0">
					<thead>
						{#<tr class="table-primary"> #}											
						<tr>
                            <th>Date</th>
						    <th>Avion</th>
						    <th>Vol</th>
							<th>Instruct</th>                                                                                                                                                                                                            
							<th>Nature</th>                                                                                                                                                                                                            
							<th>Depart</th>                                                                                                                                                                                                            
							<th>Arrivee</th>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
							<th>H/ Dép</th>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
							<th>H/ Arr</th>                                                                                                                                                                                                            
							<th>Durée Vol</th>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
							<th>Tarif Solo</th>                                                                                                                                                                                                            
							<th>Tarif Ecole</th>                                                                                                                                                                                                            
							<th>Tarif Retenu</th>                            
						    <th>€uros</th>
						</tr>
					</thead>
			        <tbody>
				        {% for vol in vols %}
					        <tr style="font-size:12px;color: #3774f7;" align ="left">
							   <td>{{ vol.datevol|date('d/m/Y') }}</td>								   
							   <td>{{ vol.avion }}</td>
							   <td>{{ vol.typevol }}</td>
							   <td>{{ vol.instructeur }}</td>
							   <td>{{ vol.naturevol}}</td>
							   <td>{{ vol.lieudepart}}</td>
							   <td>{{ vol.lieuarrivee}}</td>
							   <td>{{ vol.heuredepart|date('H:i') }}</td>
							   <td>{{ vol.heurearrivee|date('H:i')}}</td>										
							   <td>{{ vol.dureeduvol |date('H:i') }}</td>
							   <td>{{ vol.tarifSolo | number_format(2, '.', ',') }}</td>									   
							   <td>{{ vol.affichageEcole | number_format(2, '.', ',') }}</td>									   
							   <td>{{ vol.tarifapplicable | number_format(2, '.', ',') }}</td> 	    
							   <td>{{ vol.montantfacture | number_format(2, '.', ',') }}</td>
					        </tr>
				        {% endfor %}
			        </tbody>
            </table>
	</div>

</body>
</html>

