{% extends "layout.html.twig" %}
{% form_theme formMonCompte 'bootstrap_4_layout.html.twig' %}
{% block bodycreate %}


{{ form_start(formMonCompte) }}


<html lang="fr">


    <head>
		<meta charset="utf-8">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
		
    </head>
	
<body>
	
	<div class="container-fluid">

		<div class="container">
		
			  <div class="row">
					<div class="col-8">
						<h5>Compte de : {{app.user.firstname}} {{app.user.lastname}}</h5>	  
						<h5>N° Pilote : {{app.user.id}} </h5>					
						<h5>N°Comptable : {{app.user.comptepilote.id}}</h5>				
					</div>
					
					
					<div class="col-4">
												{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
												<h6>Connecté en tant que: {{ app.user.username }}</h6> 

												<a button class="btn btn-outline-primary" role="button" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
												{% else %}

												{% endif %}				
					</div>
				</div>	

	
					<div class="row">
					
						<div class="col-12">
								</br>
								</br>	
							<h3>Ajouter au compte</h3>
						</div>
					</div>
	
	<div class="row">

		<div class="col-sm-4">

				<div class="form-group" id="user">
						<div class="col-sm-12">

						</div>
				</div>	


				<div class="form-group" id="datevol">
					<div class="col-sm-12">

					</div>			
				</div>
			
		</div>
		
		<div class="col-sm-4">
				<div class="form-group" id="avion">
					<div class="col-sm-12">

					</div>
				</div>
					
				<div class="form-group" id="typevol">
					<div class="col-sm-12">			
						<div><strong>{{ form_row(formMonCompte.credit, {'label' : 'crédit', 'attr' : { 'class' : 'MonCompte' }}) }}</strong></div>
					</div>		
				</div>
					
				<div class="form-group" id="instructeur">
					<div class="col-sm-12">			
						<div><strong>{{ form_row(formMonCompte.ecriture, {'label' : 'ecriture', 'attr' : { 'class' : 'MonCompte' }}) }}</strong></div>
					</div>
				</div>
					
				<div class="form-group" id="naturevol">
					<div class="col-sm-12">			

					</div>
				</div>
		</div>	

			


</div>
 

{{ form_widget(formMonCompte.valider, {'attr': {'class': 'btn btn-primary'}}) }}
			<a href="{{ path('sky_user_mesdossiers') }}" class="btn btn-outline-primary" role="button" aria-pressed="true">Annuler</a>
			

{{ form_end(formMonCompte) }}


{% endblock %}