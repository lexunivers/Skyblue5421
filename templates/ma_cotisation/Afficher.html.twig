						<th>InfoPilote</th>
						<td>{{ ma_cotisation.TarifInfoPilote }}</td>
					</tr>

					<tr>
						<th>Cotisation Totale</th>
						<td>{{ ma_cotisation.TotalCotisation }}</td>
					</tr>
				</tbody>
			</table>


