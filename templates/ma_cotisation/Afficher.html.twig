						<th>Cotisation Club</th>
						<td>{{ ma_cotisation.cotisation }}</td>
					</tr>
					<tr>
						<th>Licence FFA</th>
						<td>{{ ma_cotisation.LicenceFFA }}</td>
					</tr>
					{# <tr> #}
					{#   <th>InfoPilote</th>#}
					{#    <td>{{ ma_cotisation.InfoPilote }}</td>#}
					{#</tr>#}
